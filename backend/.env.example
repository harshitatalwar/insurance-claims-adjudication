# Database
DATABASE_URL=postgresql://user:password@localhost:5432/opd_claims
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./opd_claims.db

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_NAME=OPD Claims Adjudication System
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# AI Settings
LLM_MODEL=gpt-4-vision-preview
LLM_TEMPERATURE=0.1
MAX_TOKENS=2000

# Confidence Thresholds
MANUAL_REVIEW_THRESHOLD=0.70
HIGH_VALUE_CLAIM_THRESHOLD=25000

# Vector Database (Qdrant)
# For Docker Compose (use service name):
QDRANT_HOST=qdrant
# For local development (use localhost):
# QDRANT_HOST=localhost

QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=policy_documents
QDRANT_USE_MEMORY=True

# MinIO Object Storage
# For Docker Compose (use service name):
MINIO_HOST=minio
# For local development (use localhost):
# MINIO_HOST=localhost

MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=opd-claims
MINIO_SECURE=False
