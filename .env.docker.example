# Docker environment variables
# Copy this to .env and fill in your values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Database (used by docker-compose)
POSTGRES_USER=opd_user
POSTGRES_PASSWORD=opd_password
POSTGRES_DB=opd_claims

# Backend will use this connection string
DATABASE_URL=postgresql://opd_user:opd_password@postgres:5432/opd_claims

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_USE_MEMORY=False

# Application Settings
DEBUG=True
SECRET_KEY=change-this-in-production-use-long-random-string

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
